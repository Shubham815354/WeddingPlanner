<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_activity2"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weddingplanner.my_activity_2_And_fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_checkListFragment"
            app:destination="@id/checkListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_venuesFragment"
            app:destination="@id/venuesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_guestFragment"
            app:destination="@id/guestFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkListFragment"
        android:name="com.example.weddingplanner.my_activity_2_And_fragments.CheckListFragment"
        android:label="fragment_check_list"
        tools:layout="@layout/fragment_check_list" >
        <action
            android:id="@+id/action_checkListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_checkListFragment_to_venuesFragment"
            app:destination="@id/venuesFragment" />
        <action
            android:id="@+id/action_checkListFragment_to_guestFragment"
            app:destination="@id/guestFragment" />
    </fragment>
    <fragment
        android:id="@+id/venuesFragment"
        android:name="com.example.weddingplanner.my_activity_2_And_fragments.VenuesFragment"
        android:label="fragment_venues"
        tools:layout="@layout/fragment_venues" >
        <action
            android:id="@+id/action_venuesFragment_to_checkListFragment"
            app:destination="@id/checkListFragment" />
        <action
            android:id="@+id/action_venuesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_venuesFragment_to_guestFragment"
            app:destination="@id/guestFragment" />
    </fragment>
    <fragment
        android:id="@+id/guestFragment"
        android:name="com.example.weddingplanner.my_activity_2_And_fragments.GuestFragment"
        android:label="fragment_guest"
        tools:layout="@layout/fragment_guest" >
        <action
            android:id="@+id/action_guestFragment_to_checkListFragment"
            app:destination="@id/checkListFragment" />
        <action
            android:id="@+id/action_guestFragment_to_venuesFragment"
            app:destination="@id/venuesFragment" />
        <action
            android:id="@+id/action_guestFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_guestFragment_to_checkListFragment2"
            app:destination="@id/checkListFragment" />
    </fragment>
</navigation>
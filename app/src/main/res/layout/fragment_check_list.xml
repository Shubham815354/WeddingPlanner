<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wedding Checklist"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:textColor="#8B4513"
                android:fontFamily="@font/overpassblack"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="40dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checklist_recy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:contentDescription="Add Task"
                android:src="@android:drawable/ic_input_add"
                app:backgroundTint="@color/ButtonBackground"/>
        </LinearLayout>

        <!-- âœ… Bottom Sheet -->
        <LinearLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bottom_sheet_bg"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/bottomSheetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add / Edit Task"
                android:textColor="@color/TextDark"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/overpassblack"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/check_edit_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Enter task name"
                android:background="@drawable/check_list_edit_bg"
                android:paddingStart="12dp"
                android:textColor="@color/TextDark"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_butt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_back"
                app:backgroundTint="@null"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
